<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codersnest.lonenightingale.syber.Signup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/details_prompt"
        android:id="@+id/title_signup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="First Name:"
        android:id="@+id/textView"
        android:layout_below="@+id/title_signup"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field_first_name"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/field_shape"
        android:nestedScrollingEnabled="false"
        android:singleLine="true"
        android:minHeight="45dp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Last Name:"
        android:id="@+id/textView2"
        android:layout_below="@+id/field_first_name"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field_last_name"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/field_shape"
        android:nestedScrollingEnabled="false"
        android:singleLine="true"
        android:minHeight="45dp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Username:"
        android:id="@+id/textView3"
        android:layout_below="@+id/field_last_name"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field_username"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/field_shape"
        android:nestedScrollingEnabled="false"
        android:singleLine="true"
        android:minHeight="45dp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password:"
        android:id="@+id/textView4"
        android:layout_below="@+id/field_username"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field_password"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/field_shape"
        android:nestedScrollingEnabled="false"
        android:singleLine="true"
        android:minHeight="45dp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email Address:"
        android:id="@+id/textView5"
        android:layout_below="@+id/field_password"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field_email"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/field_shape"
        android:nestedScrollingEnabled="false"
        android:singleLine="true"
        android:minHeight="45dp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spacer_3"
        android:layout_below="@+id/field_email"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign me Up!"
        android:id="@+id/button_signup_proceed"
        android:onClick="register"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/spacer_3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
