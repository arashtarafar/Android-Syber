<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codersnest.lonenightingale.syber.Dashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sample Person&apos;s Syber"
        android:id="@+id/title_dashboard"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spacer_4"
        android:layout_below="@+id/title_dashboard"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Say What&apos;s on Your Mind!"
        android:id="@+id/button_post"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/spacer_5"
        android:layout_centerHorizontal="true"
        android:onClick="post" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field_status"
        android:minLines="3"
        android:maxLines="3"
        android:nestedScrollingEnabled="false"
        android:background="@drawable/field_shape"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spacer_4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spacer_5"
        android:layout_below="@+id/field_status"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spacer_7"
        android:layout_below="@+id/button_post"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_posts"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer_7"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
